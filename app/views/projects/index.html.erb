<div class="row">
  <div class="col-sm-6">
    <h1>Projects</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_project_path, class: 'btn btn-primary' do %>
    Add New Project
  <% end %>
  </div>
</div>

<section class="mt-3">
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-4">
        <%= render(ProjectComponent.new(project: project)) %>
      </div>
    <% end %>
  </div>
</section>
